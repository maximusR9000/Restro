@page
@model Restro.Pages.MenuModel
@{
}

<div class="product">
	<div class="container py-5">
		<div class="row">
			<div class="col-lg-5  py-5 m-auto text-center">
				<h1>MENU</h1>
				<h6 style="color: red;">Welcome to our Menu Page</h6>
			</div>
		</div>

		@if(Model.Message != null){
			<div class="col-lg-3 alert alert-info fade show" role="alert">
			  @Model.Message
			</div>
		
		}
		
		

		<div class="row">
			@foreach(var foodItem in @Model.FoodItems)
			{
				<div class="col-lg-3 text-center">
					<div class="card border-0 bg-light mb-2">
						<div class="card-body">
							<img src="~/images/@foodItem.ImageUrl" class="img-fluid" style="height: 150px; width: 150px;" />
						</div>
						<h6>@foodItem.FoodItemName</h6>
						<p>@foodItem.Price</p>
						<a asp-page="/menu/addtocart" asp-route-ID = "@foodItem.Id" class="btn btn-primary">Add to Cart</a>
					</div>
				</div>
			}
		</div>


	</div>
</div>